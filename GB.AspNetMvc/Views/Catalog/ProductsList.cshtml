@{
    ViewData["Title"] = "Список продуктов";
}

<div class="text-center">
    <h1>Список продуктов</h1>
</div>

<p>
    <a asp-action="AddingProduct" asp-controller="Catalog" class="btn btn-outline-info">Добавить товар</a>
</p>

<p>Итого продуктов: @ViewBag.Products.Count</p>

    <table class="table table-striped table-hover" style="width:600px;">
        <thead class="table-dark">
        <tr>
            <th>Название</th><th>Категория</th>
        </tr>
        </thead>
        @foreach (var item in ViewBag.Products)
        {
            <tr>
                <td>@item.Name</td><td>@item.Category</td>
            </tr>
        }
    </table>
