@model IEnumerable<ProductDto>
@{
    ViewData["Title"] = "Список продуктов";
}

<h1>Список продуктов</h1>
<br>

<p>
    <a asp-action="AddingProduct" asp-controller="Catalog" class="btn btn-outline-info">Добавить товар</a>
</p>

<p>Итого продуктов: @Model.Count()</p>

    <table class="table table-striped table-hover" style="width:600px;">
        <thead class="table-dark">
        <tr>
            @*<th>ID</th>*@<th>Название</th><th>Категория</th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>
                    <a asp-action="EditingProduct" asp-route-id="@item.Id" class="btn-sm btn-outline-primary">
                        <i class="fa fa-edit"></i>
                    </a>
                </td>
                <td>
                    <a asp-action="ProductDeleting" asp-route-id="@item.Id" class="btn-sm btn-outline-danger">
                        <i class="fa fa-delete-left"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
